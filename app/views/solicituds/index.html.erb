<h1>Solicitudes</h1>

<% if @viaje %>
    <table>
      <tr>
        <th>Nombre</th>
        <th>Apellido 1<th>
        <th>Apellido 2<th>
        <th>Cometario</th>
        <th>Estado</th>
        <th colspan="3"></th>
      </tr>


            <% @viaje.solicituds.each do |solicitud| %>
              <tr>
                <td><%= @usuario.nombre %></td>
                <td><%= @usuario.primer_apellido %></td>
                <td><%= @usuario.segundo_apellido %></td>
                <td><%= solicitud.comentario %></td>
                <td><%= solicitud.estado %></td>
                <td><%= link_to 'Ver', usuario_viaje_solicitud_path(@usuario,@viaje,solicitud) %></td>
          </tr>
      <% end %>
    </table>
<% else %>
    <p>No hay solicitudes para este viaje</p>
<% end %>